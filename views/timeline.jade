  body
    .wrapper
      .box
        .row.row-offcanvas.row-offcanvas-left
          // sidebar
          #sidebar.column.col-sm-2.col-xs-1.sidebar-offcanvas
            ul.nav
              li
                a.visible-xs.text-center(href='#', data-toggle='offcanvas')
                  i.glyphicon.glyphicon-chevron-right
            ul#lg-menu.nav.hidden-xs
              li.active
                a(href='/timeline')
                  i.glyphicon.glyphicon-list-alt
                  |  Timeline
              li
                a(href='/home')
                  i.glyphicon.glyphicon-connect
                  |  Messages
            ul#sidebar-footer.list-unstyled.hidden-xs
              li
                a(href='#')
                  h3 VAAD SAMVAAD
                  i.glyphicon.glyphicon-heart-empty
                  |  Vinayak Trivedi
            // tiny only nav
            ul#xs-menu.nav.visible-xs
              li
                a.text-center(href='/timeline')
                  i.glyphicon.glyphicon-list-alt
                  | Timeline
              li
                a.text-center(href='/home')
                  i.glyphicon.glyphicon-comment
                  | Messages
          // /sidebar
          // main right col
          #main.column.col-sm-10.col-xs-11
            // top nav
            .navbar.navbar-blue.navbar-static-top
              .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.sr-only Toggle
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
                a.navbar-brand.logo(href='/home') V
              nav.collapse.navbar-collapse(role='navigation')
                form#search_form.navbar-form.navbar-left
                  .input-group.input-group-sm(style='max-width:360px;')
                    input#srch-term.form-control(placeholder='Search for new people', name='srch-term', type='text')
                    .input-group-btn
                      button.btn.btn-default(type='submit')
                        i.glyphicon.glyphicon-search
                ul.nav.navbar-nav
                  li
                    a(href='/home')
                      i.glyphicon.glyphicon-home
                      |  Timeline
                  li
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                      i.glyphicon.glyphicon-comment
                      | Messages
                      span#top_message(style='color:red; font-size:16px;')
                    ul.dropdown-menu(style='background-color:#F2ECEC;maximum-height:450px; overflow-y:auto;')
                      #load_message
                      li
                        a(href='#')
                          p#load_more_messages(style='width:320px;')  Load More messages
                      li
                        a(href='/messages')
                          p(style='width:320px;')  See All messages
                  li
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                      i.glyphicon.glyphicon-comment
                      |  Notifications
                      span#top_notification(style='color:red; font-size:16px;')
                    ul.dropdown-menu(style='background-color:#F2ECEC;maximum-height:450px; overflow-y:auto;')
                      #load_notifications
                      li
                        a(href='/notifications')
                          p(style='width:320px;')  See All Notifications
                ul.nav.navbar-nav.navbar-right
                  li.dropdown
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                      i.glyphicon.glyphicon-user
                    ul.dropdown-menu
                      li
                        a(href='/signout') Signout
                      li
                        a(href='#') Settings
            // /top nav
            .padding
              .full.col-sm-9
                #hidden.row
                  .col-sm-3(style='background-color:#E1D7D7')
                    .input-group.input-group-sm(style='max-width:360px;')
                      ul#search_results
                // content
                .row
                  // main col left
                  .col-sm-8
                    .well
                      form#status_form.form-horizontal(role='form', action='/update', method='POST', enctype='multipart/form-data')
                        h4 What's New
                        .form-group(style='padding:14px;')
                          textarea#status.form-control(placeholder='Update your status', name='status')
                          input(type='file', name='status_pic')
                        button.btn.btn-primary.pull-right(type='submit') Post
                    #mainarea.panel.panel-default
                  // main col right
                  .col-sm-4
                    .panel.panel-default(style=' overflow-y:auto;')
                      #activity_list.panel-body
                // /row
                hr
                h4.text-center
                  button#load_more_stories.btn.btn-primary(type='button')  Load More Stories
                h4.text-center
                  a(href='#', target='ext') VAAD SAMVAAD
                hr
              // /col-9
            // /padding
          // /main
